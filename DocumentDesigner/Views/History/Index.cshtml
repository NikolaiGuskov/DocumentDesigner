@model IReadOnlyCollection<DocumentDesigner.Application.Domain.HistoryDocument>
@{
    ViewData["Title"] = "История моих документов";
}
<style>
    table {
        border: 1px solid #ccc;
        background-color: white;
    }

    tr {
        border: 1px solid #ccc;
    }

    td, th {
        border: 1px solid #ccc;
    }
</style>
<div class="row white-shadow mt-5">
    <h2 class="yellow-color align-center">История моих документов</h2>
    <div class="row mt-3">
        <table style="margin-left: 20%">
            <tr>
                <td style="min-width: 300px">Документ</td>
                <td style="min-width: 300px">Дата создания</td>
                <td style="min-width: 300px">Действия</td>
            </tr>
            @foreach (var history in Model)
            {

                <tr>
                    <td style="min-width: 300px">@history.Document.Name</td>
                    <td style="min-width: 300px">@history.CreateDate</td>
                    <td style="min-width: 300px"><a asp-action="DeleteHistory" asp-route-historyID="@history.HistoryID">Удалить</a></td>
                </tr>
            }
        </table>
    </div>
</div>