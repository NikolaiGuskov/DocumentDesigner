@model DocumentDesigner.WebApi.ViewModels.JuridicalPersonViewModel
@{
    ViewData["Title"] = "Добавить новое юр. лицо";
}

<div class="row white-shadow">
    <div class="col-3 mt-5">
    </div>
    <div class="col-6">
        <h2 class="yellow-color">Добавить новое юр. лицо</h2>
        <form asp-action="AddJuridicalPerson" asp-controller="Setting" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="mb-2">
                <label asp-for="Name" class="form-label orange-color">Название</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" />
            </div>
            <div class="mb-2">
                <label asp-for="Inn" class="form-label orange-color">ИНН</label>
                <input type="text" asp-for="Inn" class="form-control">
                <span asp-validation-for="Inn" />
            </div>
            <div class="mb-2">
                <label asp-for="Address" class="form-label orange-color">Адрес</label>
                <input type="text" asp-for="Address" class="form-control">
                <span asp-validation-for="Address" />
            </div>
            <div class="mb-2">
                <label asp-for="Phone" class="form-label orange-color">Телефон</label><br />
                <input type="tel" asp-for="Phone"><br />
                <span asp-validation-for="Phone" />
            </div>
            <button type="submit" class="btn btn-primary mb-3">Добавить</button>
        </form>
    </div>
    <div class="col-3">
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}