@model DocumentDesigner.WebApi.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="row white-shadow">
    <div class="col-3 mt-5">
    </div>
    <div class="col-6">
        <h2 class="yellow-color">Регистрация</h2>
        <form asp-action="Registration" asp-controller="Authentication" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="mb-2">
                <label asp-for="Name" class="form-label orange-color">Имя</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" />
            </div>
            <div class="mb-2">
                <label asp-for="Surname" class="form-label orange-color">Фамилия</label>
                <input type="text" asp-for="Surname" class="form-control">
                <span asp-validation-for="Surname" />
            </div>
            <div class="mb-2">
                <label asp-for="Patronymic" class="form-label orange-color">Отчество (при наличии)</label>
                <input type="text" asp-for="Patronymic" class="form-control">
            </div>
            <div class="mb-2">
                <label asp-for="Email" class="form-label orange-color">Email</label><br />
                <input type="email" asp-for="Email"><br />
                <span asp-validation-for="Email" />
            </div>
            <div class="mb-2">
                <label asp-for="Password" class="form-label orange-color">Пароль</label>
                <input type="password" asp-for="Password" class="form-control">
                <span asp-validation-for="Password" />
            </div>
            <div class="mb-2">
                <label asp-for="ConfirmPassword" class="form-label orange-color">Повторите пароль</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control">
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <button type="submit" class="btn btn-primary mb-3">Зарегестрироваться</button>
        </form>
    </div>
    <div class="col-3">
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}